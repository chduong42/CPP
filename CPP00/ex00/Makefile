#########################################
#			FOLDERS AND NAME			#
#########################################
NAME		=	megaphone

#########################################
#				COMMANDS				#
#########################################
CC			=	c++
MKDIR		=	mkdir -p
AR			=	ar rcs
RM			= 	rm -rf

#########################################
#			FLAGS COMPILATION			#
#########################################
CFLAGS		=	-Wall -Wextra -Werror
DEBUG		=	-g -fsanitize=address
STD		=	-std=c++98

#########################################
#				COLORS					#
#########################################
GREY       =   $'\033[0;30m
RED        =   $'\033[0;31m
GREEN      =   $'\033[0;92m
YELLOW     =   $'\033[0;33m
BLUE       =   $'\033[0;34m
U_BLUE     =   $'\033[4;34m
PURPLE     =   $'\033[0;35m
CYAN       =   $'\033[0;96m
WHITE      =   $'\033[0;37m
END        =   $'\033[0;m
BOLD       =   $'\e[1m

#########################################
#			SOURCES	FILES				#
#########################################
SRC		=	megaphone.cpp
					
#########################################
#            OBJECT FILES    	        #
#########################################
OBJ		=	$(SRC:%.cpp=%.o)

#########################################
#			MAKE	RULES				#
#########################################
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(STD) -o $@ $(OBJ)


all: $(NAME)

clean:
	$(RM) $(OBJ)
	
fclean: clean
	$(RM) $(NAME)
	
re: fclean all 

.PHONY: all clean fclean re
